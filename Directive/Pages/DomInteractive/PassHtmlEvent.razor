@page "/pass-html-event"

<h3>PassHtmlEvent</h3>
<p>Hover the box below:</p>
<div class="border border-3 border-primary" style="height: 500px; width: 500px" @onmousemove="UpdateCoordinate"></div>
<div>@Coordinate</div>

@code {
    public string Coordinate { get; set; } = "";

    public void UpdateCoordinate(MouseEventArgs args)
    {
        Coordinate = $"X: {args.ClientX} Y: {args.ClientY}";
    }
}